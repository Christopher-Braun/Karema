@model Mvc4WebRole.Models.RecipeModel

@{
    ViewBag.Title = "Neues Rezept";
}


<div data-role="page">
    <div data-theme="e" data-role="header">
        <h1>@ViewBag.Title</h1>
        <a href="#" data-role="button" data-rel="back" data-icon="arrow-l">Zurück</a>
        <a href="/Recipe/Index" data-role="button" data-icon="home">Übersicht</a>
    </div>

    <div data-role="content">

        @using ( Html.BeginForm() )
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            if ( Model == null )
            {
                @Html.Action("_EditNew")
            }
            else
            {
                @Html.Action("_Edit", Model)
            }

            <button type="submit">Erstellen</button>

        }
        <div>
            <p>
                @Html.ActionLink("Abbrechen", "Index")
            </p>
        </div>
    </div>
</div>
