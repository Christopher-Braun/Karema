    <body>
        <header>

            <div class="content-wrapper">
                <div data-role="navbar">
                    <ul>
                        <li>@Html.ActionLink("Rezepte", "Index", "Recipe")</li>
                        <li>@Html.ActionLink("Tags", "Overview", "Tags")</li>
                        <li>@Html.ActionLink("Info", "Index", "Info")</li>
                    </ul>
                </div>
            </div>

        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>

        <div class="content-wrapper">
            @Html.Partial("_ViewSwitcher")
        </div>

        <footer>
            <div class="content-wrapper">
                <div class="float-left">
                    <p>&copy; @DateTime.Now.Year - Karema mobile</p>
                </div>
            </div>
        </footer>

        @RenderSection("scripts", required: false)
    </body>
    </html>
