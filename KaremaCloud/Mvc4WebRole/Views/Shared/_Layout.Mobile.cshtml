<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />

    @Styles.Render("~/Content/jquerymobile/css")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jquerymobile")


    @*<link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
        <script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
        <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>*@

    @*<script src="http://code.jquery.com/jquery-1.9.1.min.js"></script>
    <script type="text/javascript">
        // do not handle links via ajax by default
        $(document).bind("mobileinit", function () { $.mobile.ajaxEnabled = false; });
    </script>
    <link rel="stylesheet" href="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css" />
    <script src="http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"></script>*@

    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jqueryval")

</head>

<body>
    <header>
        @*<div class="content-wrapper">*@
            @*<div class="float-left">
                <p class="site-title">@Html.ActionLink("Karema", "Index", "Recipe")</p>
            </div>*@

            <div class="float-right" data-role="collapsible" data-iconpos="right" data-collapsed-icon="false" data-mini="true">
                <h3 class="site-title">Karema</h3>
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>

                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Rezepte", "Index", "Recipe")</li>
                        <li>@Html.ActionLink("Schlagwörter", "Overview", "Tags")</li>
                        <li>@Html.ActionLink("Info", "Index", "Info")</li>
                    </ul>
                </nav>

            </div>
        @*</div>*@
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    @Html.Partial("_ViewSwitcher")

    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Karema mobile</p>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>
</html>
