</head>


<body>
    <header>
        <div class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Karema", "Index", "Recipe")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>

                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Rezepte", "Index", "Recipe")</li>
                        <li>@Html.ActionLink("Schlagwörter", "Overview", "Tags")</li>
                        <li>@Html.ActionLink("Info", "Index", "Info")</li>
                    </ul>
                </nav>

            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>

    @Html.Partial("_ViewSwitcher")

    <footer>
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Karema mobile</p>
            </div>
        </div>
    </footer>

    @RenderSection("scripts", required: false)
</body>

