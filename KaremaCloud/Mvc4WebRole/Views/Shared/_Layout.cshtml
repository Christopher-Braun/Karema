    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jqueryval")

</head>

<body>
    <header>
        <div  class="content-wrapper">
            <div class="float-left">
                <p class="site-title">@Html.ActionLink("Karema", "Index", "Recipe")</p>
            </div>
            <div class="float-right">
                <section id="login">
                    @Html.Partial("_LoginPartial")
                </section>

                <nav>
                    <ul id="menu">
                        <li>@Html.ActionLink("Rezepte", "Index", "Recipe")</li>
                        <li>@Html.ActionLink("Schlagwörter", "Overview", "Tags")</li>
                        <li>@Html.ActionLink("Info", "Index", "Info")</li>
                    </ul>
                </nav>

            </div>
        </div>
    </header>
    <div id="body">
        @RenderSection("featured", required: false)
        <section class="content-wrapper main-content clear-fix">
            @RenderBody()
        </section>
    </div>



    <footer data-role="footer">
        <div class="content-wrapper">
            <div class="float-left">
                <p>&copy; @DateTime.Now.Year - Karema cloud</p>
              
            </div>
        </div>
    </footer>
    

    <div class="content-wrapper">
        <p />
        @Html.Partial("_ViewSwitcher")
        <p />
    </div>
    
    @RenderSection("scripts", required: false)
</body>

</html>
