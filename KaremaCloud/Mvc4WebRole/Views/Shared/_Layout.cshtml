<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width" />


        @Styles.Render("~/Content/jquerymobile/css")
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/jquerymobile")
    
    
