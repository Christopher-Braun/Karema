@model Mvc4WebRole.Models.TagModel

@{
    ViewBag.Title = "Tag löschen";
}

@Html.Partial("_Title")

<h3>Wollen Sie den Tag "@Model.Caption" wirklich löschen ?</h3>

<p>Dieser Tag wird verwendet von</p>
<ul>
    @foreach ( var recipe in Model.Recipes )
    {
        <li>@recipe.Name </li>
    }
</ul>


@using ( Html.BeginForm() )
{
    @Html.AntiForgeryToken()
    <p>
        <button data-icon="delete" type="submit">Löschen</button>
    </p>
    <div>
    @Html.ActionLink("Abbrechen", "Index")
</div>
}

@Html.Partial("_Home")
