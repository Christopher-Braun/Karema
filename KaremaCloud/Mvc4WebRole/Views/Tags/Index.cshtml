@using System.Collections.Generic;
@model IEnumerable<Mvc4WebRole.Models.TagModel>

@{
    ViewBag.Title = "Tags";
}

<p>
    @Html.ActionLink("Neuer Tag", "Create")
</p>
<table>

    @foreach ( var item in Model )
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Caption)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                @Html.ActionLink("Bearbeiten", "Edit", new { id = item.ID }) |
                @Html.ActionLink("Löschen", "Delete", new { id = item.ID })
            </td>
        </tr>
    }

</table>

<p>
    @Html.ActionLink("Tag-Übersicht", "Overview", "Tags")
</p>
